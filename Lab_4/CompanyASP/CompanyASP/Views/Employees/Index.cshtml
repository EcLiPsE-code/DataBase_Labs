@model IEnumerable<CompanyASP.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title>Сотрудники компании</title>
</head>
<body>
    <h3>Сотрудники</h3>
    <table>
        <tr>
            <td>Код сотрудника</td>
            <td>ФИО сотрудника</td>
            <td>ЗП сотрудника</td>
            <td>Затраты на сотрудника</td>
            <td>Возраст сотрудника</td>
            <td>Подразделение сотрудника</td>
        </tr>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeID</td>
                <td>@employee.FullName</td>
                <td>@employee.Salary</td>
                <td>@employee.Profit</td>
                <td>@employee.Age</td>
                <td>@employee.Unit.FullName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@employee.EmployeeID">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@employee.EmployeeID">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@employee.EmployeeID">Удалить</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>
